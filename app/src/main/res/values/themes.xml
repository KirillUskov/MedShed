<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedSched" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_200</item>
        <item name="colorPrimaryVariant">@color/grey_500</item>
        <item name="colorOnPrimary">@color/grey_700</item>

        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnDialogBackground">@color/light_grey</item>

        <item name="mainTextColor">@color/dark_grey</item>
        <item name="secondTextColor">@color/grey_700</item>
        <item name="toolbarTextColor">@color/green_500</item>

        <item name="iconColor">@color/green_500</item>

        <item name="selectedColor">@color/green_500</item>
        <item name="unSelectedColor">?attr/mainTextColor</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>