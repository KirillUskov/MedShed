<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedSched.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/dark_grey</item>

        <item name="colorOnBackground">@color/dark_grey</item>
        <item name="colorOnDialogBackground">@color/dark_grey_2</item>
        <item name="colorOnItemsBackground">@color/dark_grey_2</item>
        <item name="strokeColor">@color/green_700</item>
        <item name="inputColor">@color/grey_700</item>

        <item name="darkTextColor">@color/dark_grey</item>
        <item name="lightTextColor">@color/light_grey</item>

        <item name="mainTextColor">@color/grey_200</item>
        <item name="secondTextColor">@color/grey_500</item>
        <item name="thirdTextColor">@color/grey_700</item>
        <item name="toolbarTextColor">@color/green_500</item>

        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="iconColor">@color/green_500</item>

        <item name="selectedColor">@color/green_500</item>
        <item name="unSelectedColor">?attr/mainTextColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnDialogBackground</item>

        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out</item>
    </style>
</resources>