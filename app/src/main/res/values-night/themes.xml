<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedSched.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/dark_grey</item>

        <item name="colorOnBackground">@color/dark_grey</item>
        <item name="colorOnDialogBackground">@color/grey_900</item>

        <item name="mainTextColor">@color/grey_200</item>
        <item name="secondTextColor">@color/grey_500</item>
        <item name="thirdTextColor">@color/grey_700</item>
        <item name="toolbarTextColor">@color/green_500</item>

        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="iconColor">@color/green_500</item>

        <item name="selectedColor">@color/green_500</item>
        <item name="unSelectedColor">?attr/mainTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>